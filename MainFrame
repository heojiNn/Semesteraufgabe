package gui;

import java.awt.*;
import javax.swing.*;


import javax.swing.JPanel;
import javax.swing.JFrame;
import javax.swing.JButton;
import javax.swing.JLabel;


@SuppressWarnings("serial")
public class MainFrame extends JFrame {


	MainFrame(String title, int width, int heigth) {
		super(title);
		
		//Fenster-Grundeinstellungen
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new BorderLayout());
		setBackground(Color.BLACK);
		
		//BorderLayout:Center
		GridLayout menuLayout = new GridLayout(4,1,10,10);
		JPanel menu = new JPanel(menuLayout);
		menu.setBackground(new Color(148, 148, 184));
		
		Font menuFont = new Font("Serif", Font.BOLD, 25);
		
		JButton startGame = new JButton("Start");
		startGame.setBackground(new Color(102, 102, 153));
		startGame.setFont(menuFont);
		startGame.setPreferredSize(new Dimension(400, 40));
		menu.add(startGame);
		
		JButton choseCategory = new JButton("Kategorie");
		choseCategory.setBackground(new Color(102, 102, 153));
		choseCategory.setFont(menuFont);
		menu.add(choseCategory);
		
		JButton choseGameMode = new JButton("Game-Mode");
		choseGameMode.setBackground(new Color(102, 102, 153));
		choseGameMode.setFont(menuFont);
		menu.add(choseGameMode);
		
		JButton exit = new JButton("Exit");
		exit.setBackground(new Color(102, 102, 153));
		exit.setFont(menuFont);
		exit.addActionListener(new MainFrameActionListener());
		menu.add(exit);
		
		menu.setPreferredSize(new Dimension(width, heigth));
		menu.setMaximumSize(new Dimension(width, heigth));
		
		add(menu, BorderLayout.CENTER);
		
		//BorderLayout:North
		JPanel north = new JPanel();
		JLabel northLabel = new JLabel("Willkommen zum Info-Quiz!");
		JTextField northText = new JTextField("Willkommen zum Info-Quiz!");
		northText.setEditable(false);
		north.add(northLabel);
		add(north, BorderLayout.NORTH);
		
		//BorderLayout:South
		JPanel south = new JPanel();
		ImageIcon icon = new ImageIcon("C:\\Users\\Phili\\OneDrive\\Documents\\Informatik-Bachelor\\2.Semester\\Informatik 2\\Semesteraufgabe\\unilogo.jpg");
		JLabel southLabel = new JLabel(icon);
		south.add(southLabel);
		add(south, BorderLayout.SOUTH);
		
		//BorderLayout:West
		JPanel west = new JPanel();
		west.setPreferredSize(new Dimension(width/2, 0));
		add(west, BorderLayout.WEST);
		
		//BorderLayout:East
		JPanel east = new JPanel();
		east.setPreferredSize(new Dimension(width/2, 0));
		add(east, BorderLayout.EAST);
		
		pack();
		setVisible(true);
	}
		
	public static void main(String args[]) {
		new MainFrame("Informatik-Quiz", 600, 600);
	}
		
}


